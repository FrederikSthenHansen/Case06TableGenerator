@{
    ViewData["Title"] = "Home Page";
}
@model TableGenerator.Models.TableViewModel
<div class="text-center">
    <h1 class="display-4">Welcome to Frederik Sthen Hansens Table Generator</h1>


</div>
@using (Html.BeginForm("Index", "HomeController", FormMethod.Post))
{
    <div style="text-align:center">
        <div class="form-group" id="SelectedOrientation" >
            @Html.DropDownListFor(m => m.SelectedOrientation, Model.Orientations, "Select Orientation", htmlAttributes: new { @class = "form-control", id = "SelectedOrientation" })
        </div>
        @*<div><p class="button"></p><a class="btn-primary" asp-controller="Home" asp-route="Privacy/@Model.SelectedOrientation"></a></div>*@
    </div>
}

@section Scripts 
{
    @*@Scripts.Render("~/bundles/jqueryval")*@
<script type="text/javascript">
        $('#SelectedOrientation').change(function ()
        {
            var selectedOrientation = $("#SelectedOrientation").text;

            if (selectedOrientation = "Vertical") {$.getJSON('@Url.Action("VerticalTable")');}
            if (selectedOrientation = "Horizontal") {$.getJSON('@Url.Action("HorizontalTable")');}

        });
</script>
}

